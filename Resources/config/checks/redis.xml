<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liip_monitor.check.redis.class">Liip\MonitorBundle\Check\RedisCollection</parameter>
    </parameters>

    <services>
        <service id="liip_monitor.check.redis" public="false" class="%liip_monitor.check.redis.class%">
            <argument>%%liip_monitor.check.redis%%</argument>
            <tag name="liip_monitor.check_collection" />
        </service>
    </services>
</container>
